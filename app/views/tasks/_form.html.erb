<%= form_with(model: task, local: true) do |form| %>

  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "タスク名" %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :description, "詳細" %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :expired_at, "終了期限" %>
    <%= form.datetime_field :expired_at %>
  </div>

  <div class="field">
    <%= form.label :status, "ステータス" %>
    <%= form.select :status, Task.statuses.keys %>
  </div>

   <div class="field">
    <%= form.label :priority, "優先度" %>
    <%= form.select :priority, Task.priorities.keys %>
  </div> 


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
